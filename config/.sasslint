options:
  cache-config: true
  formatter: stylish
  merge-default-rules: false

rules:
  # Extends
  extends-before-mixins: 2
  extends-before-declarations: 2
  placeholder-in-extend: 2

  # Mixins
  mixins-before-declarations: 2

  # Line Spacing
  one-declaration-per-line: 2
  empty-line-between-blocks:
    - 2
    - allow-single-line-rulesets: false
  single-line-per-selector: 2

  # Disallows
  no-attribute-selectors: 0
  no-color-hex: 0
  no-color-keywords: 2
  no-color-literals: 0
  no-combinators: 0
  no-css-comments: 2
  no-debug: 1
  no-disallowed-properties: 2
  no-disallowed-property-values: 0
  no-duplicate-properties: 2
  no-empty-rulesets: 2
  no-extends: 2
  no-ids: 0
  no-important: 0
  no-invalid-hex: 2
  no-mergeable-selectors: 2
  no-misspelled-properties: 2
  no-qualifying-elements:
    - 2
    -
      allow-element-with-class: true
      allow-element-with-attribute: true
  no-trailing-whitespace: 2
  no-trailing-zero: 2
  no-transition-all: 2
  no-universal-selectors: 0
  no-url-domains: 2
  no-url-protocols: 2
  no-warn: 1
  property-units: 0

  # No Vendor Prefixes
  no-vendor-prefixes: 0
  no-selector-vendor-prefix: 0
  no-property-vendor-prefix: 0
  no-value-vendor-prefix: 0
  no-media-feature-vendor-prefix: 0
  no-at-rule-vendor-prefix: 0

  # Nesting
  declarations-before-nesting: 2
  force-attribute-nesting: 0
  force-element-nesting: 0
  force-pseudo-nesting: 0

  # Name Formats
  class-name-format:
    - 2
    - allow-leading-underscore: false
  function-name-format: 2
  id-name-format:
    - 2
    - allow-leading-underscore: false
  mixin-name-format: 2
  placeholder-name-format: 2
  variable-name-format: 2

  # Inner Spacing
  space-after-comma: 2
  space-before-colon: 2
  space-after-colon: 2
  space-before-brace: 2
  space-before-bang: 2
  space-after-bang: 2
  space-between-parens: 2
  space-around-operator: 2

  # Final Items
  trailing-semicolon:
    - 2
    - include: fasle
  final-newline:
    - 1
    - include: true

  # Style Guide
  attribute-quotes:
    - 2
    - include: false
  bem-depth:
    - 0
    - max-depth: 1
  border-zero:
    - 2
    - convention: 'none'
  brace-style:
    - 2
    - allow-single-line: false
  clean-import-paths: 2
  empty-args: 2
  hex-length: 2
  hex-notation: 2
  indentation: 2
  leading-zero:
    - 2
    - include: true
  max-line-length:
    - 1
    - length: 100
  max-file-line-count: 1
  nesting-depth:
    - 2
    - max-depth: 1
  pseudo-element: 2
  quotes: 0
  shorthand-values: 2
  url-quotes: 0
  variable-for-property: 2
  zero-unit: 2
  property-sort-order:
    - 2
    -
      order:

        - -webkit-appearance
        - -moz-appearance
        - appearance

        - box-sizing

        - display
        - vertical-align

        - position
        - top
        - right
        - bottom
        - left
        - z-index

        - flex
        - flex-basis
        - flex-grow
        - flex-shrink
        - align-self
        - order

        - flex-direction
